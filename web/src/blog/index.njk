
<h1 class="text-center">Blog</h1>
<div class="posts">
{% for post in posts %}
  <a class="post" href="/blog/post/{{post.slug.current}}">
    <img class="main-image" src="{{post.mainImage.asset.url}}" alt="{{post.title}} image">
    <div class="summary">
      <div class="title">
        <h3>
          {{post.title}}
        </h3>
      </div>
      <div class="byline body2">
        By {{post.authorName}} on
        <time class="postlist-date" datetime="{{ post.publishedAt }}">
          {{ post.publishedAt | readableDate }}
        </time>
      </div>
      <div class="summary-container">
        {{post.summary | markdownify | safe }}
      </div>
    </div>
  </a>
{% endfor %}
</div>
