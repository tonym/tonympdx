---json
{
  "layout": "",
  "permalink": "blog/feed.xml",
  "eleventyExcludeFromCollections": true,
  "metadata": {
    "title": "Tony M - Blog",
    "subtitle": "I write about literature and art, cocktails and culture, and design and development",
    "language": "en",
    "url": "https://www.tonympdx.com/blog",
    "author": {
      "name": "Tony M",
      "email": "tony@fbpllc.com",
      "url": "https://www.tonympdx.com"
    }
  }
}
---
<?xml version="1.0" encoding="utf-8"?>
<feed xmlns="http://www.w3.org/2005/Atom" xml:base="{{ metadata.url }}">
  <title>{{ metadata.title }}</title>
  <subtitle>{{ metadata.subtitle }}</subtitle>
  <link href="{{ permalink | absoluteUrl(metadata.url) }}" rel="self"/>
  <link href="{{ metadata.url }}"/>
  <updated>{{ posts[0].publishedAt }}</updated>
  <id>{{ metadata.url }}</id>
  <author>
    <name>{{ metadata.author.name }}</name>
    <email>{{ metadata.author.email }}</email>
  </author>
  {%- for post in posts %}
  {%- set absolutePostUrl = post.url | absoluteUrl(metadata.url) %}
  <entry>
    <title>{{ post.title }}</title>
    <summary>{{ post.summary }}</summary>
    <link href="{{ absolutePostUrl }}"/>
    <updated>{{ post.publishedAt }}</updated>
    <id>{{ absolutePostUrl }}</id>
    <content xml:lang="{{ metadata.language }}" type="html">{{ post.body | markdownify | htmlToAbsoluteUrls(absolutePostUrl) }}</content>
  </entry>
  {%- endfor %}
</feed>
